  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "SCOPE=prod nest start",
    "start-security": "SCOPE=prod nest start security",
    "start-customers": "SCOPE=prod nest start customers",
    "start:dev-backend": "SCOPE=dev nest start backend --watch",
    "start:dev-security": "SCOPE=dev nest start security --watch",
    "start:dev-customers": "SCOPE=dev nest start customers --watch",
    "start:debug-backend": "SCOPE=dev nest start backend --debug --watch",
    "start:debug-security": "SCOPE=dev nest start security --debug --watch",
    "start:debug-customers": "SCOPE=dev nest start customers --debug --watch",
    "start:prod-backend": "SCOPE=prod node dist/apps/backend/main",
    "start:prod-security": "SCOPE=prod node dist/apps/security/main",
    "start:prod-customers": "SCOPE=prod node dist/apps/customers/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "SCOPE=test jest",
    "test:watch": "SCOPE=test jest --watch",
    "test:cov": "SCOPE=test jest --coverage",
    "test:debug": "SCOPE=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "SCOPE=test jest --config ./apps/backend/test/jest-e2e.json",
    "docs": "typedoc src/**/*.ts --out docs --exclude '**/*.test.ts' --exclude '**/*spec.ts' --exclude '**/*.mock.ts' --exclude '**/index.ts'"
  },
  "dependencies": {
    "@apollo/server": "^4.5.0",
